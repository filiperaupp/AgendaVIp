<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="18dp"
    tools:context="com.example.filip.agendavip.VipActivity">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/RelativeLayout01"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >
        <Button
            android:id="@+id/btnAgenda"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="Agenda"
            android:textSize="18dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/botao_apagado" />

        <Button
            android:id="@+id/btnVip"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="Contatos VIP"
            android:textSize="18dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/botao_aceso"/>
    </RelativeLayout>

    <ListView
        android:id="@+id/lvVips"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />



</LinearLayout>
